{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "types": [
    "jest",
    "mocha",
    "@types/jest",
    "@types/mocha",
    "@types/chai"
    ],
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}